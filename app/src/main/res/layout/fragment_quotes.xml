<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuotesFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quote"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#673AB7"
            android:textSize="50sp"
            android:text="Inspirational Quote"
             />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="316dp"
            android:background="?attr/colorAccent"
            android:contentDescription="random_image"
            android:scaleType="fitXY"
            android:src="@drawable/oatmeal" />

        <Button
            android:id="@+id/buttonQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8FCEE6"
            android:text="Generate New Quote" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>