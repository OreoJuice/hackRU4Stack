<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyAltTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/alt_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyEditTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="MySwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>

    </style>

</resources>