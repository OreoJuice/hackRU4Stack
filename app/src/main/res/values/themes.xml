<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCompat.HackRU" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/medium_green</item>
        <!-- Misc -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>

        <item name="fontFamily">@font/kanit_font_family</item>
        <item name="backgroundColor">@color/bg_color</item>
        <item name="android:listDivider">?attr/colorPrimary</item>
    </style>

    <style name="Theme.AppCompat.HackRU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.HackRU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppCompat.HackRU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>