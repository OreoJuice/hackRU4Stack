<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HackRU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#729B79</item>
        <item name="colorPrimaryDark">#3A513E</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#BACDB0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#729B79</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">#F3E8EE</item>
        <item name="android:textColor">#000000</item>
        <item name="android:listDivider">?attr/colorPrimary</item>
    </style>

    <style name="Theme.HackRU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HackRU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HackRU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>